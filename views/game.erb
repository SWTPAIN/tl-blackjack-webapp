<div id='game'>

<div class="container">
  <%if @losser%>
    <div class="alert alert-error"><%=@losser%></div>
  <% end %>
  <%if @winner %>
    <div class="alert alert-success"><%=@winner%></div>
  <% end %>
</div>

<h1>Blackjack!</h1>
<p>Welcome <%= session[:player_name] %> </p>

<% if @gameover %>
  <p>
    <strong>Play Again?</strong>
    <a href ='/bet'class='btn btn-primary'>Yes </a>
    <a href ='/game_over'class='btn btn-primary'>No </a>
  </p>
<% end %>

<div class="well" id='dealer_area'>
<h3>Dealer's cards:</h3>
  <% session[:dealer_cards].each_with_index do |card, index| %>
    <% if session[:turn] !="dealer" && index == 0 %>
      <img src='/images/cards/cover.jpg' />
    <% else %>
      <%= card_img(card) %>
    <% end %>
  <% end %>
<% if @dealer_hit %>
  <h4> <%= "Dealer has #{calculate_total session[:dealer_cards]} and will hit" %></h4>
  <form id='dealer_hit' action="/game/dealer/hit">
    <input type='submit' value="Click to see dealer's next card &rarr;"  class='btn btn-primary'>
  </form>
<% end %>

</div>
</br>

<div class="well" id='player_area'>
  <h3><%= session[:player_name]%>'s cards:<h3>
    <% session[:player_cards].each do |card| %>
      <%= card_img(card) %>
    <% end %>
  <h4>
    <%= session[:player_name] %> has $<%= session[:player_money]%> and bet $<%= session[:bet_amount] %> this round.
  </h4>
</div>
</br>

<%= session[:player_name]%>'s total point <%= calculate_total session[:player_cards] %>
<p> <%= "What would #{session[:player_name]} like to do?" %> </p>

<% if @show_hit_or_stay_buttons %>
  <form id='hit_form'action="/game/player/hit" method="post">
    <input type='submit' value='Hit' class='btn btn-primary'>
  </form>

  <form id='stay_form' action="/game/player/stay" method="post">
    <input type='submit' value='Stay' class='btn btn-warning'>
  </form>
<% end %>

</div>